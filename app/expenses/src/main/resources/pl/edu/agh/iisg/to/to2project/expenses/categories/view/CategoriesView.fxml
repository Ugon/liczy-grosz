<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.Button?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <TableView prefWidth="800" maxHeight="470" BorderPane.alignment="TOP_CENTER">
            <columns>
                <TableColumn prefWidth="100.0" text="Category"/>
                <TableColumn prefWidth="100.0" text="Parent Category"/>
                <TableColumn prefWidth="600.0" text="Other"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="10" prefHeight="50" alignment="CENTER">
            <Button text="Add New Category"/>
            <Button text="Edit Selected Category"/>
            <Button text="Delete Selected Category"/>
        </HBox>
    </bottom>
</BorderPane>
